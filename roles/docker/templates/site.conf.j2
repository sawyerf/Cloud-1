server {
	listen 80;
	server_name _;

	return 403;
}

server {
	listen 80;
	server_name {{ host }};

	location / {
		proxy_pass http://{{ wp_name }}/;
		proxy_set_header Host $server_name;
	}
	location /adminator {
		return 301 /adminator/;
	}
	location /adminator/ {
		proxy_pass http://{{ pma_name }}/;
		proxy_set_header Host $server_name;
	}
}

server {
	listen 443;
	server_name _;

	return 301 http://$host$request_uri;
}